{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/uploads/(.*)",
            "dest": "/server.js"
        },
        {
            "src": "/api/(.*)",
            "dest": "/server.js"
        },
        {
            "src": "/(.*\\.(html|css|js|ico|png|jpg|svg|gif|webp|woff2?))",
            "dest": "/public/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/server.js"
        }
    ]
}